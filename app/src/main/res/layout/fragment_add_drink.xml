<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/txtVenueName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/gray_999999"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAddDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/txt_add_drink"
        android:textColor="@color/gray_999999"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVenueName" />

    <EditText
        android:id="@+id/editTxtDrinkName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:hint="@string/enter_drink"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:minHeight="40dp"
        android:paddingStart="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgDrinkName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgDrinkName"
        app:layout_constraintTop_toTopOf="@+id/imgDrinkName" />

    <ImageView
        android:id="@+id/imgDrinkDesc"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_outline_article_24"
        android:backgroundTint="@color/black_3f3a3a"
        android:contentDescription="@string/img_obj_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtDrinkName" />

    <ImageView
        android:id="@+id/imgDrinkPrice"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_baseline_attach_money_24"
        android:backgroundTint="@color/black_3f3a3a"
        android:contentDescription="@string/img_drink_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDrinkType" />

    <ImageView
        android:id="@+id/imgDrinkPhoto"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_outline_image_24"
        android:backgroundTint="@color/black_3f3a3a"
        android:contentDescription="@string/img_upload_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtDrinkPrice" />

    <ImageView
        android:id="@+id/imgDrinkType"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_outline_category_24"
        android:backgroundTint="@color/black_3f3a3a"
        android:contentDescription="@string/img_drink_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtDrinkDesc" />

    <ImageView
        android:id="@+id/imgDrinkName"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_outline_local_drink_24"
        android:backgroundTint="@color/black_3f3a3a"
        android:contentDescription="@string/img_drink_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddDrink" />

    <EditText
        android:id="@+id/editTxtDrinkPrice"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/enter_price"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingStart="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgDrinkPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgDrinkPrice"
        app:layout_constraintTop_toTopOf="@+id/imgDrinkPrice" />

    <EditText
        android:id="@+id/editTxtDrinkDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:hint="@string/enter_description"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:minHeight="80dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgDrinkDesc"
        app:layout_constraintTop_toTopOf="@+id/imgDrinkDesc" />

    <TextView
        android:id="@+id/txtDrinkPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/border_edit_text"
        android:hint="@string/upload_images"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgDrinkPhoto"
        app:layout_constraintTop_toTopOf="@+id/imgDrinkPhoto"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinnerDrinkType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_edit_text"
        android:minHeight="36dp"
        android:overlapAnchor="false"
        android:paddingStart="4dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/imgDrinkType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgDrinkType"
        app:layout_constraintTop_toTopOf="@+id/imgDrinkType" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/RatingButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/cancel"
        android:textSize="16sp"
        app:backgroundTint="@color/gray_999999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddDrinkConfirm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddDrinkConfirm"
        style="@style/RatingButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_complete"
        android:textSize="16sp"
        app:backgroundTint="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCancel" />

    <ImageView
        android:id="@+id/imgDrinkPreview"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/img_upload_image_trigger"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/txtDrinkPhoto"
        app:layout_constraintEnd_toEndOf="@+id/txtDrinkPhoto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtDrinkPhoto"
        app:layout_constraintTop_toTopOf="@+id/txtDrinkPhoto"
        app:layout_constraintVertical_bias="1.0"
        tools:src="@drawable/placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>