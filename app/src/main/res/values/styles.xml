<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabsLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:background">@drawable/background_map_search</item>
        <item name="android:textColor">@color/white_f5f5f5</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ActivityDetailDialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowBackground">@color/translucent_40</item>
        <item name="android:animation">@null</item>
    </style>

    <!--    DatePicker style-->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- Customize text field of the text input mode. -->
<!--        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>-->
    </style>

    <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipEndPadding">10dp</item>
        <item name="chipStartPadding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="checkedIconTint">@color/primaryBabyColor</item>
        <item name="android:textColor">@color/sl_chip_state_text</item>
        <item name="chipBackgroundColor">@color/sl_chip_state_list</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>